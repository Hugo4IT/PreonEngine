<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="schema.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<app xmlns="https://www.hugo4it.com/PreonEngine/modules/XML/schema">
    <config>
        <window>
            <title>Hello, World!</title>
            <resizable>true</resizable>
        </window>
    </config>
    <content>
        <vbox expand="both">
            <panel color="#da0037" expand="horizontal" minSize="0 100"/>
            <hbox expand="both">
                <panel expand="vertical" minSize="300 0" padding="16 16 16 16" color="#ffffff">
                    <vbox fit="vertical" expand="horizontal">
                        <panel color="#c4c4c4" expand="horizontal" minSize="0 48"/>
                        <panel color="#c4c4c4" expand="horizontal" minSize="0 48"/>
                        <panel color="#c4c4c4" expand="horizontal" minSize="0 48"/>
                        <label text="Hello, World!" expand="horizontal" minSize="0 48"/>
                    </vbox>
                </panel>
                <panel expand="both" color="#d3d3d3"/>
            </hbox>
        </vbox>
    </content>
